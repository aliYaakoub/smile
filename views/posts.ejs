        <div class="posts">
            <form action="/postsForm" method="POST">
                <div class="postsForm flex flex-row">
                    <div class="flex flex-row posts__form">
                        <label for="city">cities : </label>
                        <select class="inputs" name="city" id="city">
                            <option value="all">all</option>
                            <% cities.forEach(city =>{%>
                                <option value="<%= city.name %>"><%= city.name %></option>
                            <%});%>
                        </select>
                    </div>
                    
                    <div class="flex flex-row posts__form">
                        <label for="category">categories : </label>
                        <select class="inputs" name="category" id="category" required>
                            <option value="all">all</option>
                            <% categories.forEach(category =>{%>
                                <option value="<%= category.name %>"><%= category.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <button type="submit" class="submitPostsForm">submit</button>
                </div>
            </form>
