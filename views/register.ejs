<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="css/index.css">
    <link rel="stylesheet" type="text/css" href="css/normalize.css">
    <title>registration</title>
</head>
<body>
    <section class="block block--register flex flex-center">
        <div class="container con">
            <h1>Please enter all the required information</h1>
            <p class="msg"><%= msg %></p>
            <form action="/register" method="POST">
                <div class="grid grid-column">
                    <div class="registerDiv">
                        <div class="form-control">
                            <input name="name", id="name" type="text" required>
                            <label>name</label>
                        </div>
                        <div class="form-control">
                            <input name="email", id="email" type="email" required>
                            <label>Email</label>
                        </div>
                        <div class="form-control">
                            <input name="password", id="password" type="password" required>
                            <label>Password</label>
                        </div>
                    </div>
                    <div class="registerDiv">
                        <div class="form-control">
                            <input name="username", id="username" type="text" required>
                            <label>username</label>
                        </div>
                        <div class="form-control">
                            <input name="address", id="address" type="text" required>
                            <label>address</label>
                        </div>
                        <div class="form-control">
                            <input name="phonenumber", id="phonenumber" type="number" required>
                            <label>phone number</label>
                        </div>
                    </div>
                </div>
                <div class="selectDiv flex flex-center">
                    <div class="cityDiv flex flex-row flex-center">
                        <label for="city">City</label>
                        <select class="city" name="city" id="city">
                            <% cities.forEach(city =>{%>
                                <option value="<%= city.name %>""><%= city.name %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <div class="flex flex-row flex-center">    
                    <div class="btnRegisterDiv flex flex-center">
                        <a class="btnCancel" href="/">cancel</a>
                    </div>
                    <div class="btnRegisterDiv flex flex-center">
                        <button type="submit" class="btnRegister">submit</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <script src="javascript/script.js"></script>
</body>
</html>